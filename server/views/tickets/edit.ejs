<!-- Edit - Carson -->
<%- include ../Partials/header.ejs%>
<%- include ../Partials/navbar.ejs%>
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Ticket Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Ticket Title" name="Name" value="<%= Ticket.Title %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <input type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the Description" name="Description" value="<%= Ticket.Description %>" required>
                </div>
                <div class="form-group">
                    <label for="priorityTextField">Priority Level</label>
                    <input type="text" class="form-control" id="priorityTextField" placeholder="Enter the Priority Value" name="Priority" value="<%= Ticket.Priority %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit<i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel<i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>