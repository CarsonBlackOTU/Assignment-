<%- include ../partials/navbar.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <!-- Form to add a new ticket -->
            <form class="form" method="POST" action="/tickets/add">
                <div class="form-group">
                    <label for="nameTextField">Assignment Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Class</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Due Date</label>
                    <input type="date" class="form-control" id="nameTextField" placeholder="Enter Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Due Date</label>
                    <textarea class="form-control" id="descriptionTextArea" placeholder="Enter the Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Estimated completion time</label>
                    <input type="number" class="form-control" id="nameTextField" placeholder="Enter number(hours)" name="Title" required>
                </div>
                <button class="btn btn-primary" type="submit">Add Ticket<i class="fas fa-plus-circle"></i></button>  
                <a href="/tickets" class="btn btn-warning">Cancel<i class="fas fa-undo"></i></a>    
            </form>
        </div>
    </div>
</div>

